<%= form_for @workout, :html => {:class => 'form-inline'} do |f| %>
    <div class="row">
        
          <div class="col-sm-2 new_title">
            <%= f.label :workout_datetime, "Workout Date" %>
          </div>
          <div class="col-sm-10">
            <%= f.datetime_select :workout_datetime, {order: [:month, :day, :year], ampm: true, default: DateTime.now, :minute_step => 15}, {required: true, :class => "form-control"} %>
          </div>
        
      </div>
    <div class="row">
      
         <div class="col-sm-2 new_title">
          <%= f.label :gym %>
         </div>
         <div class="col-sm-10"> 
          <%= collection_select(:workout, :gym_id, current_user.gyms, :id, :name, {:selected => current_user.default_gyms.first.try(:gym_id)}, {:class => "form-control"}) %>
          </div>
        
      </div>
    <div class="row">
  
     <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit 'Submit', class: 'btn btn-primary btn-lg button_grey' %>
     </div>

    
    </div>
<% end %>
