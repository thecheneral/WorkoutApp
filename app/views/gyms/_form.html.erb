<%= form_for @gym, :html => {:class => 'form-horizontal'} do |f| %>
    <div class="form-group">
        <%= f.label :name, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "form-control " %>
      </div>
    </div>
    <div class="form-group">
        <%= f.label :workout_url, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :workout_url, :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">

      <%= f.fields_for :memberships do |memberships_form| %>

          <%= memberships_form.label :default,  :class => "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= memberships_form.check_box :default, :class => "form-control" %>
          </div>

      <% end %>
    <div class="form-group">
  
     <div class="col-sm-4 col-sm-offset-2">
      <%= f.submit 'Submit', class: 'btn btn-lg button_grey' %>
      <%= link_to 'Cancel', gyms_path, class: 'btn btn-lg button_grey' %>
     </div>
    </div>
    
<% end %>
