<%= form_for @workout , :html => {:class => 'form-horizontal'} do |f| %>
      <div class="form-group">
        <%= f.label :description, :class => 'col-sm-2 control-label' %>
        <%= f.text_area :description, rows: "10", :readonly => true, :class => 'col-sm-10' %>
      </div>
      <div class="form-group">
        <%= f.label :result, :class => 'col-sm-2 control-label' %>
        <%= f.text_field :result, :class => 'col-sm-10' %>
      </div>
      <div class="form-group">
        <%= f.label :lift_type, :class => 'col-sm-2 control-label' %>
        <%= f.text_field :lift_type, :class => 'col-sm-10' %>
      </div>
      <div class="form-group">
        <%= f.label :lift_weight, :class => 'col-sm-2 control-label' %>
        <%= f.number_field :lift_weight, :class => 'col-sm-10' %>
      </div>
      <div class="form-group">
        <%= f.label :lift_rep_scheme, :class => 'col-sm-2 control-label' %>
        <%= f.text_field :lift_rep_scheme, :class => 'col-sm-10' %>
      </div>

      <div class="row">
        <div class="col-sm-10 col-sm-offset-2" style="padding-left:0;" >
          <%= f.submit 'Submit', class: 'btn btn-primary btn-lg button_grey' %>
          <%= link_to 'Cancel', workouts_path(id: "all"), class: 'btn btn-primary btn-lg button_grey' %>
        </div>
      </div>
<% end %>